@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}
@using EM.Model.Entities;
@using EM.Model.DTOs;
@{
    var Title = Model.Id == 0 ? "新增报销单" : "编辑报销单";
}
@model EM_ExpenseAccount  
<form method="post" data-role="form" data-url="" data-beforesave="BeforeSave" data-success="SuccessFunction" class="basic-grey">
    <h1>
        @Title
        <span></span>
    </h1>
    @Html.HiddenFor(o => o.Id)
    <label>
        <span>报销单号 :</span>
        @Html.TextBoxFor(o => o.EANumber, new { placeholder = "单据的报销单号", @class = "required" })<a class="checkTitle">对公</a><input type="checkbox" id="IsPublic" />
    </label>
    <label>
        <span>申请日期 :</span>
        @Html.TextBox("ApplyDate", Model.ApplyDate.ToShortDateString(), new { @placeholder = "报销单上的申请时间", @class = "datepicker required" })
    </label>
    <label>
        <span>报销人 :</span>
        @Html.TextBoxFor(o => o.Name, new { @placeholder = "报销的对象", @class = "required" })
    </label>

    <label>
        <span>总金额 :</span>
        @Html.TextBoxFor(o => o.SumMoney, new { @class = "required", readOnly = "readOnly" })
    </label>   
     @Html.Partial("_BodyList")
    <label>
        <span>&nbsp;</span>
        <input type="submit" class="button" value="保存" />
        <p class="mlp20 cCCC mt10 fwN">编辑后默认变为待审核状态</p>
    </label>
</form>
<div id="DetailUpdate">

</div>
<div id="bodyContent">

</div>
@section Js
{<script src="~/Js/Program/ExpenseAccount.js"></script>}