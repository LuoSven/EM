@using EM.Model.DTOs;
@model List<ExpenseAccountDetailListDTO>
@{
    var IsView = (string)ViewBag.ActionName == "browse";
}
<label>
    <span>报销明细 :</span>
    <table id="DetailList" class="table table-hover wp80">
        <thead>
            <tr>
                <th width="20%">费用公司</th>
                <th width="15%">发生日期</th>
                <th width="15%">费用大类</th>
                <th width="15%">金额</th>
                <th width="20%">事由说明</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr id="NoRow">
                    <td colspan="7" class="taC">暂无数据</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr data-id="@item.Id">
                        <td class="taL">@item.CompanyName</td>
                        <td class="taL">@item.OccurDate.ToShortDateString()</td>
                        <td class="taL">@item.CateName</td>
                        <td class="taL">@item.Money</td>
                        <td class="taL">@item.Remark</td>
                        <td class="taL">
                            @if (!IsView)
                            {
                                <a href="javascript:;" onclick="EADetail.DeleteDetail(@item.Id)">删除</a>
                                <a href="javascript:;" onclick="EADetail.Show(@item.Id)">编辑</a>
                            }
                            &nbsp;<a href="~/ExpenseAccount/BrowseDetail/@item.Id" target="_blank">查看</a>
                        </td>
                    </tr>
                }
            }
            @if (!IsView)
            {
                <tr id="AddRow">
                    <td colspan="7" class="taC">
                        <div class="pRel" id="AddDetailForm">
                            <a onclick="EADetail.Show()" >新增明细</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</label>


