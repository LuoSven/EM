@using EM.Model.Entities
@model EM_ExpenseAccount_Detail
@{
   
}

<div id="DetailField" style="display:none" class=" p10 pl50">
    <form    id="EditDetail" name="EditDetail" method="post" action="../../ExpenseAccount/SaveDetail">
        @Html.HiddenFor(o=>o.Id)
        <table class="wp100">
            <tr>
                <td width="20%"></td>
                <td width="80%"></td>
            </tr>
            <tr>
                <td class="size14">公司名称：</td>
                <td class="p5">
                    @Html.DropDownListFor(o => o.CompanyId, (SelectList)ViewBag.CompanyList, "-请选择-", new { @class = "required" })
                </td>
            </tr>
            <tr>
                <td class="size14">发生日期：</td>
                <td class="p5">
                    @Html.TextBox("OccurDate",Model.OccurDate.ToShortDateString(), new { onclick = "WdatePicker({ el: this.id })", @class = "required" })
                </td>
            </tr>
            <tr>
                <td class="size14">费用明细：</td>
                <td class="p5">
                    @Html.DropDownListFor(o => o.CateId, (SelectList)ViewBag.CateList, "-请选择-", new { @class = "required" })
                </td>
            </tr>
            <tr>
                <td class="size14">金额：</td>
                <td class="p5">
                    @Html.TextBox("Money",Model.Money==0?"":Model.Money.ToString("F2"), new {@class="required" })
                </td>
            </tr>
            <tr>
                <td class="size14">说明：</td>
                <td class="p5">
                    @Html.TextBoxFor(o=>o.Remark, new { @class = "required wp100" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="p5"> <button type="submit"  class="btn">保存</button></td>
            </tr>
        </table>
    </form>
</div>